<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bt"
        android:text="日历"
        android:textColor="#77330000"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="55dp" 
        android:background="@drawable/bt_bgd"
        />
 <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffeeeeee"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >


            <TextView
                android:id="@+id/popupwindow_calendar_month"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#aa564b4b"
                android:textSize="18sp" />

        </RelativeLayout>

        <com.fancyy.calendarweight.KCalendar
            android:id="@+id/popupwindow_calendar"
            android:layout_width="match_parent"
            android:layout_height="320dp" >
        </com.fancyy.calendarweight.KCalendar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbcc3333" />

        <!-- <Button
            android:id="@+id/popupwindow_calendar_bt_enter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bt_nobgd"
            android:text="完成"
            android:textColor="#aa564b4b"
            android:textSize="16sp" /> -->
    </LinearLayout>
    

</RelativeLayout>